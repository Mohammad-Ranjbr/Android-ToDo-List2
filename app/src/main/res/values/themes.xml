<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ToDo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimary</item>
    </style>

    <style name="DefaultText" parent="Base.Theme.ToDo">
        <item name="fontFamily">@font/primary_regular</item>
    </style>

    <style name="header" parent="DefaultText">
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="h1" parent="header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h2" parent="header">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="h3" parent="header">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="p" parent="DefaultText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="fontFamily">@font/primary_black</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="SecondaryButton" parent="Base.Theme.ToDo">
        <item name="backgroundTint">@color/secondaryButtonBackgroundTint</item>
        <item name="android:textColor">@color/secondaryIconColor</item>
        <item name="iconTint">@color/secondaryIconColor</item>
        <item name="fontFamily">@font/primary_bold</item>
        <item name="rippleColor">@color/secondaryRippleColor</item>
    </style>

    <style name="Theme.ToDo" parent="Base.Theme.ToDo" />
</resources>